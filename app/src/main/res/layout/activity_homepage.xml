<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!-- Judul Homepage -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Homepage"
        android:fontFamily="@font/poppins_bold"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:paddingTop="100dp" />

    <!-- Baris Pertama: Welcome dan Username -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp">

        <!-- Label "Welcome" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="Welcome "
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp" />

        <!-- Tampilan Username -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:id="@+id/your_new_username_id"
            android:textColor="@color/blue"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Baris Kedua: Label Email -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">

        <!-- Label "your email" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your email "
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp" />

        <!-- Tampilan Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:id="@+id/your_new_email_id"
            android:textColor="@color/blue"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp" />

        <!-- Label "has been registered" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" has been registered"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Baris Ketiga: Label Phone -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">

        <!-- Label "your phone" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your phone "
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp" />

        <!-- Tampilan Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone"
            android:id="@+id/your_new_phone_id"
            android:textColor="@color/blue"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp" />

        <!-- Label "has been registered" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" has been registered"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Tombol Logout -->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/poppins_bold"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:id="@+id/your_new_button_id"/>
    />
</LinearLayout>
